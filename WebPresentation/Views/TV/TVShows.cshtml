@using DataAccessLayer
@using DomainModels
@model IEnumerable<DomainModels.Tv>

@{
    ViewBag.Title = "TvShows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    TvAccessor tvAccessor = new TvAccessor();
    FavoriteTvAccessor favoriteTvAccessor = new FavoriteTvAccessor();
    UserAccessor userAccessor = new UserAccessor();
    User user = null;
    if (User != null && User.Identity.IsAuthenticated)
    {
        try
        {
            user = userAccessor.SelectUserByEmail(User.Identity.Name);
        }
        catch (Exception e)
        {
        }
    }
}

<h2>TV Shows - Total: @Model.Count()</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Poster")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstAirDate.Value.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Overview)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popularity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Networks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.PosterPath)" alt="" width="200px" height="auto" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstAirDate.Value.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Overview)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Keywords)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Popularity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Networks)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
    <td>
        @Html.ActionLink("Delete", "DeleteTvShow", new { id = item.Id })
    </td>
    @if (User != null && user != null)
    {
        if (User.Identity.IsAuthenticated)
        {
            if (!favoriteTvAccessor.CheckForExistanceCheckForTvShowByIdAndUserId(item.Id, user))
            {
                <td>
                    @Html.ActionLink("Add to Favorites", "AddToFavorites", new { id = item.Id })
                </td>
            }
        }
    }
    </tr>
    }
</table>
