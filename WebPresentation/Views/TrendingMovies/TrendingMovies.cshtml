@using DataAccessLayer
@using DomainModels
@using Microsoft.Ajax.Utilities
@model IEnumerable<DomainModels.Movie>

@{
    ViewBag.Title = "TrendingMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    FavoriteMovieAccessor favoriteMovieAccessor = new FavoriteMovieAccessor();
    UserAccessor userAccessor = new UserAccessor();
    User user = null;
    if (User != null && User.Identity.IsAuthenticated)
    {
        try
        {
            user = userAccessor.SelectUserByEmail(User.Identity.Name);
        }
        catch (Exception e)
        {
        }
    }
}

<h2>Trending Movies - Total: @Model.Count()</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Poster")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate.Value.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Overview)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popularity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Runtime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
<tr>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.PosterPath)" alt="" width="200px" height="auto" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate.Value.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Overview)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Keywords)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Budget)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Popularity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Runtime) mins
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    </td>
    @if (User != null && user != null)
    {
        if (User.Identity.IsAuthenticated)
        {
            if (!favoriteMovieAccessor.CheckForExistanceOfMovieByIdAndUserId(item.Id, user))
            {
                <td>
                    @Html.ActionLink("Add to Favorites", "AddToFavorites", new { id = item.Id })
                </td>
            }
        }
    }
</tr>
    }

</table>